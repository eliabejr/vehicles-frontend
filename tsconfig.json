{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "es2018.promise"
    ]
  }
}